{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Theme Preference Entity",
  "description": "Represents the user's visual theme preference. Managed by next-themes with localStorage persistence.",
  "type": "object",
  "required": ["theme"],
  "properties": {
    "theme": {
      "type": "string",
      "description": "User's selected visual theme",
      "enum": ["light", "dark", "system"]
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "theme": "light"
    },
    {
      "theme": "dark"
    },
    {
      "theme": "system"
    }
  ]
}
